<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.ngo.NgoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ngoName"
                style="@style/Textview"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="Welcome Back "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                style="@style/cardview"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="20dp"
                app:contentPadding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ngo" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/donationRequest"
                style="@style/button"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:backgroundTint="@color/white"
                android:text="Donation request"
                android:textSize="@dimen/_14sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/requestHistory"
                style="@style/button"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:text="Request History"
                android:textSize="@dimen/_14sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/donations"
                style="@style/button"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:text="Donations"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
