<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".about.AboutActivity">




    <androidx.cardview.widget.CardView
        android:id="@+id/fiftym"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="@color/background"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:id="@+id/cliclplztwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_arrow_back_24" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:srcCompat="@drawable/rizq" />


            <TextView
                android:id="@+id/about"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:text="Al-Rizq is Food Donation android app that is beneficial for Donors and for NGOs.
Our priority was to minimize hunger in society so that poor people donâ€™t die due to starvation."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description"
                style="@style/Textinputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="About"
                android:visibility="gone"


                >


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_border1"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="6" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/update"
                style="@style/button"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15sdp"
                android:backgroundTint="@color/primary"
                android:text="Update"
                android:textSize="@dimen/_14sdp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView

                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Version 1.0"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    />

            </RelativeLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>



    <include
        android:id="@+id/progress"
        layout="@layout/progress_layout" />



</RelativeLayout>