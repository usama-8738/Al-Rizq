<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.admin.AdminFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/rizq" />

            <TextView
                style="@style/Textview"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Share Food So Needy One Won't Die Starving"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/restaurant"
                    style="@style/cardview"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginTop="@dimen/_20sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/resImage"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/restaurent" />

                        <TextView
                            style="@style/Textview"
                            android:layout_below="@+id/resImage"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Restaurant"
                            android:textAlignment="center"

                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ngo"
                    style="@style/cardview"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ngoImage"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ngo" />

                        <TextView
                            style="@style/Textview"
                            android:layout_below="@+id/ngoImage"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Ngo"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/rider"
                    style="@style/cardview"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginTop="@dimen/_20sdp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/riderImage"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/rider" />

                        <TextView
                            style="@style/Textview"
                            android:layout_below="@+id/riderImage"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Rider"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/doner"
                    style="@style/cardview"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/donerImage"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/doner" />

                        <TextView
                            style="@style/Textview"
                            android:layout_below="@+id/donerImage"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Donar"
                            android:textAlignment="center"

                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <androidx.cardview.widget.CardView
                    android:id="@+id/contactUs"
                    style="@style/cardview"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginTop="@dimen/_20sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/contactUsImage"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/contactus" />

                        <TextView
                            style="@style/Textview"
                            android:layout_below="@+id/contactUsImage"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Contact Us"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/logout"
                    style="@style/cardview"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:id="@+id/logoutImage"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/logout" />

                        <TextView
                            style="@style/Textview"
                            android:layout_below="@+id/logoutImage"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Logout"
                            android:textAlignment="center"

                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>